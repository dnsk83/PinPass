<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PinPass.Pages.PasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Form">
                <TableRoot>
                    <TableSection>
                        <EntryCell
                            Label="Name"
                            Placeholder="Website or application"
                            Text="{Binding Name}" />
                        <EntryCell
                            Label="Login"
                            Placeholder="Login"
                            Text="{Binding Login}" />
                        <ViewCell>
                            <StackLayout
                                Orientation="Horizontal">
                                <Label
                                    Text="Password" />
                                <Entry
                                    Placeholder="Password"
                                    Text="{Binding Password}"
                                    IsPassword="True" />
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>